//МАССИВЫ

#include <stdio.h>
#include <math.h>

int main() {

	int arr[] = {5,7,2,56,34,89};
	arr[0] = 56;
	printf("arr[0] = %d\n", arr[0]);
	
	float num[3];
	num[0] = 5.4f;
	num[1] = 4.23f;
	num[2] = 67.34f;
	printf("num[1] = %.2f\n", num[1]);
	
	char word[] = {'S', 'o', 'm','e'};
	char words[] = "Hello World!\n";
	//printf("words[0] = %s\n", words[0]);
	words[1] = 'G';
	printf("%s", words);
	
	
	int array[3][4] = {
		{4,5,6,5},
		{7,234,4,6},
		{4,678,6,7},
	};
	
	
	array[1][1] = 5000;
	printf("array[1][1] = %d\n", array[1][1]);
	

  return 0;
}


