	int res;
	
	//printf("ENTER X: ");
	//scanf("%d",&x);
	//printf("ENTER Y: ");
	//scanf("%d", &y);
	x = 10;
	x += 10;
	y = 20;
	
	res = x + y;
	printf("VARIABLE: %d + %d = %d\n", x, y,res);
	res = x - y;
	printf("VARIABLE: %d - %d = %d\n", x, y,res);
	res = x / y;
	printf("VARIABLE: %d / %d = %d\n", x, y,res);
	res = y / x;
	printf("VARIABLE: %d / %d = %d\n", x, y,res);
	res = (x*x*x * y/x);
	printf("VARIABLE: %d * %d = %d\n", x, y,res);
	
	
 return 0;
 
}


