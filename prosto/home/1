int main(void) {
	
	int num[4];
	num[0]=1;
	num[1]=2;
	num[2]=3;
	num[3]=4;
	num[4]=5;
	
	printf("num[0]=%d\n", num[0]);
	printf("num[4]=%d", num[4]);}

