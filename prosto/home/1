 return 0;
 
}


//ЗАДАЧА
#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main(int argc, char *argv[]) {
	
	int x;
	int y;
	int res;
	
	//printf("ENTER X: ");
	//scanf("%d",&x);
	//printf("ENTER Y: ");
	//scanf("%d", &y);
	x = 10;
	x += 10;
	y = 20;
	
	res = x + y;
	printf("VARIABLE: %d + %d = %d\n", x, y,res);
	res = x - y;
	printf("VARIABLE: %d - %d = %d\n", x, y,res);
	res = x / y;
	printf("VARIABLE: %d / %d = %d\n", x, y,res);
	res = y / x;
	printf("VARIABLE: %d / %d = %d\n", x, y,res);
	res = (x*x*x * y/x);
	printf("VARIABLE: %d * %d = %d\n", x, y,res);
	
	
 return 0;
 
}


//ЗАДАЧА 
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/*Дана масса M в килограммах.
Используя операцию деления нацело, найти количество полных тонн в ней (1 тонна = 1000 кг).*/


int main(int argc, char *argv[]) {
	
	int M;
	int T;
	
	printf("Enter the weight in kg: ");
	scanf("%d", &M);
	
	T = M / 1000;
	
	printf("Number of tons per %d kg = %d", M, T);
	
	
 return 0;
 
}


