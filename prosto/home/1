//ЗАДАЧА
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

/*
Даны три точки A, B, C на числовой оси. Найти длины отрезков AC и BC и их сумму.
*/

int main(int argc, char *argv[]) {
	
	int A;
	int B;
	int C;
	int AB;
	int BC;
	int sum;
	
	printf("ENTER A: ");
	scanf("%d", &A);
	printf("ENTER B: ");
	scanf("%d", &B);
	printf("ENTER C: ");
	scanf("%d", &C);
	
	AB = A+B;
	printf("A+B = %d\n", AB);
	
	BC = B + C;
	printf("A+B = %d\n", BC);
	
	sum = AB + BC;
	printf("AB+BC = %d", sum);

 return 0;
 
}



