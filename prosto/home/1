//ЗАДАЧА
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/*Даны три целых числа: A, B, C. 
Проверить истинность высказывания: «Число B находится между числами A и C».*/


int main(int argc, char *argv[]) {
	
	int A;
	int B;
	int C;
	
	printf("Enter number A: ");
	scanf("%d", &A);
	
	printf("Enter number B: ");
	scanf("%d", &B);
	
	printf("Enter number C: ");
	scanf("%d", &C);
	
	if ((A<B && B<C) || (C < B && B < A)) {
		printf("TRUE");
	}
	else
	{
		printf("FALSE");
	}
	
 return 0;
 
}


//ЗАДАЧА 
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/* Дано целое число.
Если оно является положительным, то вычесть из него 8;
если отрицательным, то прибавить к нему 6;
если нулевым, то заменить его на 10.
Вывести полученное число.*/


int main(int argc, char *argv[]) {
	
	int num;
	
	printf("Enter number: ");
	scanf("%d", &num);
	
	if(num>0){
		num = num - 8;
		printf("Number = %d", num);
	}
	else if (num<0){
		num = num + 6;
		printf("Number = %d", num);
	}
	else
	{
		num = 10;
		printf("Number = %d", num);
	}
	
 return 0;
 
}


//ЗАДАЧА
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/*Даны три числа.
Найти сумму двух наибольших из них.*/


int main(int argc, char *argv[]) {
	
	int num1;
	int num2;
	int num3;
	int max_1;
	int max_2;
	int sum;
	
	printf("Enter number one: ");
	scanf("%d", &num1);
	printf("Enter number two: ");
	scanf("%d", &num2);
	printf("Enter number three: ");
	scanf("%d", &num3);
	
	max_1 = num1;
	if (num2>max_1){
		max_1 = num2;
	}
	if (num3>max_1){
		max_1 = num3;
	}
	printf("MAX_1 = %d\n",max_1);
	

	if ((num1<num2 && num2<num3)||(num3<num2 && num2<num1)){
		max_2 = num2;
	}
	if ((num2<num1 && num1<num3)||(num3<num1 &&  num1<num2)){
		max_2 = num1;
	}
	if ((num1<num3 && num3<num2)||(num2<num3 &&  num3<num1)){
		max_2 = num3;
	}
	printf("MAX_2 = %d\n", max_2);
	
	sum = max_1 + max_2;
	printf("SUMMA = %d", sum);

 return 0;
 
}



//ЗАДАЧА 
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/*Даны три числа.
Найти сумму двух наибольших из них.*/


int main(int argc, char *argv[]) {
	
	int num1;
	int num2;
	int num3;
	int sum;
	int summa2;
	
	printf("Enter number one: ");
	scanf("%d", &num1);
	printf("Enter number two: ");
	scanf("%d", &num2);
	printf("Enter number three: ");
	scanf("%d", &num3);
	
	sum = num1 + num2 + num3;
	printf("SUMMA = %d\n", sum);
	
	int min = num1;
	if (num2<min){
		min = num2;
	}
	if (num3<min){
		min = num3;
	}
	printf("MIN = %d\n", min);
	
	summa2 = sum - min;
	printf("Summa_2x = %d", summa2);
	
 return 0;
 
}


