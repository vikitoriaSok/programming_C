#include <stdio.h>
int main(void) {
	
	int num[4];
	num[0]=1;
	num[1]=2;
	num[2]=3;
	num[3]=4;
	num[4]=5;
	
	printf("num[0]=%d\n", num[0]);
	printf("num[4]=%d", num[4]);}

//ЗАДАЧА
#include <stdio.h>
int main(void) {
	
	int numbers[4] = { 1, 2, 3, 5 };       
	printf("numbers[2] = %d", numbers[2]);

	return 0;}

