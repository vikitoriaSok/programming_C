//ЗАДАЧА
1.Напишите программу, в которой определите массив из четырех чисел - {1, 2, 3, 4}. 
2. Увеличьте первый и последний элементы массива в два раза.
3.Выведите все элементы массива на консоль.

#include <stdio.h>
int main(void) {

	int numbers[4]={1,2,3,4};
	numbers[0]=numbers[0]*2;
	numbers[3]=numbers[3]*2;
	
	for (int i=0; i<4; i++)
	{
		printf("%d", numbers[i]);
		printf("\n");
	}

  return 0;}





//ЗАДАЧА
#include <stdio.h>
/*1.Напишите программу, в которой определите массив из четырех чисел - {1, 2, 3, 4}. 
2. Увеличьте все элементы массива в два раза. В
3.ведите все элементы массива на консоль.*/
int main()
{
    int numbers[] = {1, 2, 3, 4};  
    numbers[0] = numbers[0] * 2;  

    for(int i = 0; i < 4; i++)
    {
        numbers[i] = numbers[i] * 2;
    }

    for(int i = 0; i < 4; i++)
    {
        printf("%d", numbers[i]);
        printf("\n");
    }
    return 0;
}



//ЗАДАЧА
#include <stdio.h>
int main() {

  int a;
  int b;
  int c;
  int w;
  int k;
  int sum;

  printf("Enter a:\n");
  scanf("%d", &a);

  printf("Enter b:\n");
  scanf("%d", &b);

  c = a * b;
  printf("C = %d\n", c); 
  
  w = a + b;
  printf("W = %d\n", w);
  
  k = a / b;
  printf("K = %d\n", k);
  
  sum = ((c + w)/k);
  printf("sum = %d\n", sum);
  
  if (sum < 100 && sum > 20)
  {
  	printf("DOG\n");
  }
  else
  {
  	printf("CAT\n");
  }
  
  
  return 0;}





//ЗАДАЧА
#include <stdio.h>
/*Вычисление индекса массы тела*/

int main() {

  int weight;
  int height;
  float index;

  printf("Enter your weight in kg:\n");
  scanf("%d", &weight);

  printf("Enter your height in meters:\n");
  scanf("%d", &height);

  index = (float)weight / (height * height);
  printf("Your body mass index: %.2f\n", index);

  if (index < 18.5) 
  {
    printf("Underweight\n");
  }
  
  if (index >= 18.5 && index <= 24.9) 
  { 
    printf("Normal weight\n");
  }
  
  if (index >= 25.0 && index <= 29.9) 
  { 
    printf("Overweight\n");
  }
  
  if (index > 30) 
  {
    printf("Fatness\n");
  }
  
  return 0;}
//Менее 18.5: Недостаточный вес
// 18.5 - 24.9: Нормальный вес
//  25.0 - 29.9: Избыточный вес
//  30.0 и выше: Ожирение

//ЗАДАЧА

#include <stdio.h>
/*Сумма элементов массива:*/
int main() {
  int a[] = {1, 2, 3, 4, 5}, s = 0;
  for (int i = 0; i < 5; i++) s += a[i];
  printf("summa: %d\n", s);
  return 0;}






