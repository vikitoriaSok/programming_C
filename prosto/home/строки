//ДЛИНА СТРОКИ  STRLEN() 

#include <stdio.h>
#include <string.h>
int main (void){
	char str[]="hello";
	printf("len str = %zu\n", strlen(str));
return 0;
}





//КОПИРОВАНИЕ СТРОК STRCOPY()

#include <stdio.h>
#include <string.h>
int main (void){	
	char str[] = "copy me";
	char dest[20];//место	
	strcpy(dest,str);
	printf("copy: %s\n", dest);	
return 0;
}




//КОНКАТЕНАЦИЯ(ОБЪЕДИНЕНИЕ) СТРОК STRCAT()

#include <stdio.h>
#include <string.h>
int main (void){	
	char str1[20] = "Hello, ";
	char str2[] = "Word!";
	strcat(str1,str2);
	printf("Result = %s\n", str1);
return 0;
}

